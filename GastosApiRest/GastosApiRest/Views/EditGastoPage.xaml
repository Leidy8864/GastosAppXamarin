<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GastosApiRest.ViewModels;assembly=GastosApiRest"
             x:Class="GastosApiRest.Views.EditGastoPage"
             Title="Update or Delete Gasto">

    <!--<ContentPage.BindingContext>
        <viewModels:EditGastoViewModel/>
    </ContentPage.BindingContext>-->

    <StackLayout VerticalOptions="Center"
                 Spacing="20"
                 Padding="20">

        <Entry Text="{Binding SelectedGasto.Nombre}" />

        <Entry Text="{Binding SelectedGasto.Apellidos}" />

        <Entry Text="{Binding SelectedGasto.MontoGasto}" />

        <Entry Text="{Binding SelectedGasto.Monto}" />

        <Entry Text="{Binding SelectedGasto.TipoGasto}" />

        <Button Text="Edit Gasto"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                FontSize="30"
                Command="{Binding EditGastoCommand}"/>

        <Button Text="Delete Gasto"
                BackgroundColor="DeepPink"
                TextColor="White"
                FontSize="30"
                Command="{Binding DeleteGastoCommand}" />

    </StackLayout>

</ContentPage>