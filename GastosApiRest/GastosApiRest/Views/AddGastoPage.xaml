<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GastosApiRest.ViewModels;assembly=GastosApiRest"
             x:Class="GastosApiRest.Views.AddGastoPage"
             Title="Nuevo Gasto">
    <ContentPage.BindingContext>
        <viewModels:AddGastoViewModel/>
    </ContentPage.BindingContext>

    <StackLayout VerticalOptions="Center"
                     Spacing="20"
                     Padding="20">
        <Entry Text="{Binding SelectedGasto.nombre}"
                FontSize="20"
                Placeholder="Nombre" />

        <Entry Text="{Binding SelectedGasto.apellidos}"
                FontSize="20"
                Placeholder="Apellidos" />

        <Entry Text="{Binding SelectedGasto.tipoGasto}"
                FontSize="20"
                Placeholder="Tipo de gasto" />

        <Entry Text="{Binding SelectedGasto.monto}"
                FontSize="20"
                Placeholder="Monto" />

        <Button Text="Guardar"
                BorderRadius="15"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                FontSize="20"
                Command="{Binding SendGastoCommand}" />
    </StackLayout>
</ContentPage>